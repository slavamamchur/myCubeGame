<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sadgames.dicegame">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    -->

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeClassicLight">

        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".platforms.android.ui.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeClassicLight"/>

        <activity
            android:name=".platforms.android.ui.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <activity android:name=".platforms.android.ui.RegistrationActivity" />

        <activity
            android:name=".platforms.android.ui.MainActivity"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="landscape" />

        <activity android:name=".platforms.android.ui.GameMapActivity" />

        <activity android:name=".platforms.android.ui.GameActivity" />

        <activity
            android:name=".platforms.android.ui.GameInstanceActivity"
            android:screenOrientation="landscape" />

        <activity android:name=".platforms.android.ui.GameListActivity" />

        <activity android:name=".platforms.android.ui.GameMapsListActivity" />

        <activity android:name=".platforms.android.ui.GameInstanceListActivity" />

        <activity android:name=".platforms.android.ui.DBPlayersListActivity" />

        <activity android:name=".platforms.android.ui.NewGameInstanceActivity" />

        <service
            android:name=".rest_api.RestApiService"
            android:exported="false" />

        <!--
            ATTENTION: This was auto-generated to add Google Play services to your project for
            App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <!--<meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />-->

    </application>

</manifest>